{
  "extends": ["./node_modules/@tailwind-md/tsconfig/base.json"],
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "rootDir": "./src",
    "target": "esnext",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "noUncheckedIndexedAccess": false,
    "verbatimModuleSyntax": true,
    "paths": {
      "~/*": ["./src/*"]
    },
    "types": ["vite/client"]
  },
  "include": ["./src/**/*.*"]
}
